                            <h3 class="feature-title">Registro de usuario.</h3>

                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Nombre" name="name" required>
                            </div>

                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="Apellidos" name="apellidos" required>
                            </div>

                            <div class="mb-3">
                                <input type="date" class="form-control" placeholder="Fecha de nacimiento" name="date"
                                    required>
                            </div>

                            <div class="mb-3">
                                <input type="email" class="form-control" placeholder="Email" name="mail" required>
                            </div>

                            <div class="mb-3">
                                <input type="password" class="form-control" placeholder="ContraseÃ±a" name="password"
                                    required>
                            </div>

                            <div class="mb-3">
                                <label id="result_contact">{{error}}</label>
                            </div>
                            <input id="btn-contact" type="submit" class="btn btn-secondary btn-block" value="Enviar"
                                name="">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>