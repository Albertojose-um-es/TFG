<div class="container d-flex justify-content-center align-items-center p-4">
    <div class="col-md-7">
        <div class="row justify-content-center align-items-center">
            <h2 class="text-center">Iniciar sesión</h2>
            <hr class="divider">
        </div>
        <div class="row ">
            <form id="login-form" method="POST" action="/users/login" class="py-2">
                <div class="form-group py-2">
                    <label for="email">Correo electrónico</label>
                    <input type="email" class="form-control" id="mail" name="mail" placeholder="Introduzca su correo electrónico" required />
                </div>
                <div class="form-group py-2">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="contraseña" name="password" placeholder="Introduzca su contraseña" required />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary" id="btn-login">Enviar</button>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-primary btn-block" onclick="window.history.back()">Volver atrás</button>
                    </div>
                </div>
            </form>
        </div>
    </div>  
</div>
